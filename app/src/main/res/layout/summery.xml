<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fave_cart.favorite"
    android:background="@color/lightGrey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue"
        android:id="@+id/sumery"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/sumback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back_arrow"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Summery"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:id="@+id/sum"
        android:layout_below="@+id/sumery">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="3 Items"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="R Items"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="60dp"
            android:layerType="software"
            android:src="@drawable/dotted" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="80dp"
            android:text="To Pay: "
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="R Items"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/deltaRelative"
        android:background="@color/white"
        android:layout_below="@id/sum"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/lightGrey"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="ORDER OVERVIEW" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Delivery Method\nDelivery"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="CHANGE"
            android:textColor="@color/teal_700"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/dot2"
            android:layout_below="@id/textView9"
            android:layout_marginTop="10dp"
            android:layerType="software"
            android:src="@drawable/dotted" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dot2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Delivery Address"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView10"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="33 Melle street, Braam, Johannesburg\nSouth Africa"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/change2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView11"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="CHANGE"
            android:textColor="@color/teal_700"
            android:textSize="17dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deltaRelative"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <ListView
            android:id="@+id/cartList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </ListView>
    </LinearLayout>

</LinearLayout>
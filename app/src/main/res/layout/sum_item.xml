<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:clickable="true"
    android:outlineSpotShadowColor="@color/black"
    android:focusable="true"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/fav_itemImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/item_image"
            android:src="@drawable/laptop3" />

        <TextView
            android:id="@+id/fv_itemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fav_itemImg"
            android:text="Product Name"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/fv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fav_itemImg"
            android:layout_below = "@+id/fv_itemname"
            android:text="R 100"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/fav_itemDesc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/fv_price"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/fav_itemImg"
            android:text="The standard chunk of Lorem Ipsum used since the 1500s is reproduced below for those interested. Sections 1.10.32 and 1.10.33 from "
            android:textColor="@color/lightGrey"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
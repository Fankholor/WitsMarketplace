<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    android:elevation="5dp"
    android:clickable="true"
    android:outlineSpotShadowColor="@color/black"
    android:focusable="true"
    android:layout_margin="10dp"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_item"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/item_image"
            android:src="@drawable/laptop3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="The standard chunk of Lorem Ipsum used since the 1500s is reproduced below for those interested. Sections 1.10.32 and 1.10.33 from "                android:textColor="@color/lightGrey"
                android:textSize="10sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 100"
                android:textColor="@color/blue"
                android:layout_marginTop="3dp"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/inStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In Stock:"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_cart"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/round_btn"
                    android:layout_marginLeft="40dp"
                    android:text="+ cart"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/shopping_cart2"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>